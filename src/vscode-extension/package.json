{
  "name": "azure-cost-estimator",
  "displayName": "azure-cost-estimator",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.68.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:bicep"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configurationDefaults": {
      "[bicep]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "files.insertFinalNewline": true,
        "editor.suggestSelection": "first",
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggest.showWords": false
      }
    },
    "commands": [
      {
        "category": "Azure Cost Estimator",
        "command": "azure-cost-estimator.estimateAll",
        "title": "Estimate",
        "icon": "$(symbol-operator)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "azure-cost-estimator.estimateAll",
          "when": "editorLangId == bicep",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "azure-cost-estimator.estimateAll",
          "when": "resourceLangId == bicep",
          "group": "0_estimation"
        }
      ],
      "editor/title/context": [
        {
          "command": "azure-cost-estimator.estimateAll",
          "when": "resourceLangId == bicep",
          "group": "0_estimation"
        }
      ],
      "editor/context": [
        {
          "command": "azure-cost-estimator.estimateAll",
          "when": "resourceLangId == bicep",
          "group": "0_estimation"
        }
      ],
      "commandPalette": [
        {
          "command": "azure-cost-estimator.estimateAll",
          "group": "0_estimation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@azure/arm-consumption": "9.2.0",
    "@azure/identity": "4.2.1",
    "@types/glob": "8.1.0",
    "@types/mocha": "10.0.1",
    "@types/node": "18.x",
    "@types/vscode": "1.76.0",
    "@typescript-eslint/eslint-plugin": "5.56.0",
    "@typescript-eslint/parser": "5.56.0",
    "@vscode/test-electron": "2.3.0",
    "@vscode/webview-ui-toolkit": "1.2.2",
    "eslint": "8.36.0",
    "glob": "9.3.2",
    "mocha": "10.8.2",
    "ms-rest-js": "1.0.1",
    "node-fetch": "3.3.1",
    "ts-loader": "9.4.2",
    "typescript": "5.0.2",
    "vscode-languageclient": "8.1.0",
    "webpack": "5.98.0",
    "webpack-cli": "5.0.1"
  }
}
